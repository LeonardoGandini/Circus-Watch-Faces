<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="false"
    android:scrollbars="none"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.watch.lgandini.com.skyrimwatchfaces.smatoacty"
        android:touchscreenBlocksFocus="false"
        android:background="@color/background_material_light"
        android:nestedScrollingEnabled="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="This app is intended for Android Wear, you need an Android Wear smartwatch if you want to use it.\n\nRealized by Leonardo Gandini, drawings and original design by Roberta Pagnoni"
            android:id="@+id/textView2"
            android:textColor="#ff000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:paddingTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Want to know more?"
            android:id="@+id/textView3"
            android:textColor="#ffe8b800"
            android:textSize="22dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leonardo Gandini"
            android:id="@+id/leobutton"
            android:nestedScrollingEnabled="true"
            android:onClick="buttonOnClick"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/adView"
            android:layout_alignStart="@+id/adView" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roberta Pagnoni"
            android:id="@+id/robebutton"
            android:nestedScrollingEnabled="true"
            android:onClick="buttonOnClickroberta"
            android:layout_below="@+id/textView3"
            android:layout_toRightOf="@+id/leobutton"
            android:layout_toEndOf="@+id/leobutton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caccia la grana"
            android:id="@+id/grana"
            android:nestedScrollingEnabled="true"
            android:onClick="buttonOnClickGrana"
            android:layout_below="@+id/leobutton"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:layout_marginTop="30dp" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"
            android:layout_alignParentLeft="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:layout_centerHorizontal="true">
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>

</ScrollView>