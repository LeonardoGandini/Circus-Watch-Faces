<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="com.leonardogandini.circuswatchfaces">

<uses-sdk android:minSdkVersion="20" android:targetSdkVersion="21"/>

<uses-feature android:name="android.hardware.type.watch"/>

<uses-permission android:name="com.google.android.permission.PROVIDE_BACKGROUND"/>
<uses-permission android:name="android.permission.WAKE_LOCK"/>

<application
    android:allowBackup="true"
    android:label="@string/app_name"
    android:icon="@drawable/ic_launcher"
    android:theme="@android:style/Theme.DeviceDefault">
    <service
        android:name="com.leonardogandini.circuswatchfaces.Acrobats"
        android:allowEmbedded="true"
        android:label="@string/acrobat_name"
        android:permission="android.permission.BIND_WALLPAPER"
        android:taskAffinity="">

        <meta-data
            android:name="android.service.wallpaper"
            android:resource="@xml/watch_face"/>
        <meta-data
            android:name="com.google.android.wearable.watchface.preview"
            android:resource="@drawable/acrobats_base"/>
        <meta-data
            android:name="com.google.android.clockwork.home.preview_circular"
            android:resource="@drawable/acrobats_base"/>
        <intent-filter>
            <action android:name="android.service.wallpaper.WallpaperService"/>
            <category android:name="com.google.android.wearable.watchface.category.WATCH_FACE"/>
        </intent-filter>
    </service>
    <service
        android:name="com.leonardogandini.circuswatchfaces.Juggler"
        android:allowEmbedded="true"
        android:label="@string/juggler_name"
        android:permission="android.permission.BIND_WALLPAPER"
        android:taskAffinity="">

        <meta-data
            android:name="android.service.wallpaper"
            android:resource="@xml/watch_face"/>
        <meta-data
            android:name="com.google.android.wearable.watchface.preview"
            android:resource="@drawable/juggler_base"/>
        <meta-data
            android:name="com.google.android.clockwork.home.preview_circular"
            android:resource="@drawable/juggler_base"/>
        <intent-filter>
            <action android:name="android.service.wallpaper.WallpaperService"/>
            <category android:name="com.google.android.wearable.watchface.category.WATCH_FACE"/>
        </intent-filter>
    </service>
    <service
        android:name="com.leonardogandini.circuswatchfaces.Equilibrist"
        android:allowEmbedded="true"
        android:label="@string/equilibrist_name"
        android:permission="android.permission.BIND_WALLPAPER"
        android:taskAffinity="">

        <meta-data
            android:name="android.service.wallpaper"
            android:resource="@xml/watch_face"/>
        <meta-data
            android:name="com.google.android.wearable.watchface.preview"
            android:resource="@drawable/equilibrist_base"/>
        <meta-data
            android:name="com.google.android.clockwork.home.preview_circular"
            android:resource="@drawable/equilibrist_base"/>
        <intent-filter>
            <action android:name="android.service.wallpaper.WallpaperService"/>
            <category android:name="com.google.android.wearable.watchface.category.WATCH_FACE"/>
        </intent-filter>
    </service>
    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version"/>
</application>

</manifest>